<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.main.notice.NoticeDAO">
  
  <!-- list -->
  	<select id="getList" resultType="NoticeDTO">
  	
  		SELECT NOTICENUM,NOTICENAME,NOTICETITLE,NOTICEDATE,NOTICEHIT FROM NOTICE ORDER BY NOTICENUM DESC
  	
  	</select>
 	
 	
 	<!-- add -->
 	<insert id="setAdd" parameterType="NoticeDTO">
 		INSERT INTO NOTICE VALUES(NOTICE_SEQ.NEXTVAL,#{noticeName},#{noticeTitle},#{noticeContents},SYSDATE,0)
 	</insert>
 	
 	<!-- detail -->
 	<select id="getDetail" resultType="NoticeDTO" parameterType="NoticeDTO">
 		SELECT * FROM NOTICE WHERE NOTICENUM=#{noticeNum}
 	</select> 
 	
 	<!-- update  -->
 	<update id="setUpdate" parameterType="NoticeDTO">
		UPDATE NOTICE SET NOTICETITLE=#{noticeTitle}, NOTICECONTENTS=#{noticeContents} WHERE NOTICENUM=#{noticeNum}
		
		  	
 	</update>
 	
 	<!--delete  -->
 	<delete id="setDelete" parameterType="NoticeDTO">
 		DELETE FROM NOTICE WHERE NOTICENUM = #{noticeNum}  
 	</delete>
 		
  
  	</mapper>

