<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.main.qna.QnaDAO">
  
  	<sql id="searchSql">
  		<if test="kind == 'name'">
		 		AND	QNANAME LIKE '%'||#{search}||'%'
		 	</if>
		 	<if test="kind == 'title'">
		 		AND	QNATITLE LIKE '%'||#{search}||'%'
		 	</if>
		 	<if test="kind == 'contents'">
		 		AND	QNACONTENTS LIKE '%'||#{search}||'%'
		 	</if>
  	</sql>
  
  	<select id="getTotal" resultType="Long" parameterType="Pager">
  		SELECT COUNT(QNANUM)
  		FROM QNA
  		WHERE QNANUM > 0
  		<include refid="searchSql"/>
  	</select>
  	
  	<select id="getList" parameterType="Pager" resultType="QnaDTO">
  		SELECT QNANUM,QNANAME,QNATITLE,QNADATE,QNAHIT
  			FROM(SELECT ROWNUM R, B.*
  				 FROM(SELECT *
  				 		FROM QNA
  				 	  WHERE QNANUM > 0
  				 	  <include refid="searchSql"/>
  				 	  ORDER BY QNANUM DESC	 
  				 	  ) B	  
  			)
  		WHERE R BETWEEN #{startRow} AND #{lastRow}	 
  		
  	</select>
  </mapper>

